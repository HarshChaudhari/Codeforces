import java.util.Scanner;

/**
 * Author:-Harsh Chaudhari
 * 
 * College:-DA-IICT
 */
public class A427 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = Integer.parseInt(s.nextLine()),sum=0,crime=0;
		for(int i=0;i<n;i++){
			int k=s.nextInt();
			if(k<0 && sum==0)
				crime++;
			else
				sum+=k;
		}
		System.out.println(crime);
	}
}
